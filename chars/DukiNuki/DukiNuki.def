; Definition file for Duke Nukem
; Contains all the filenames needed for the character

; Player information
[Info]
name = "Duke Nukem"        ;Name of character
displayname = "Duke Nukem" ;Name of character to display 
versiondate = 12,08,2020    ;Version date of character (MM-DD-YYYY or X.XX) Production Started on 10,18,2020
mugenversion = 1.1          ;Version of M.U.G.E.N character works on (X.XX)
author = "Brergrsart"       ;Character author name
pal.defaults = 1,2,3,4      ;Default palettes in order of preference (up to 4)
                            ;Numbering starts from 1
localcoord = 320,240        ;Local coordinate space width and height

; Files for the player
[Files]
cmd     = DukiNuki.cmd           ;Command set
cns     = DukiNuki.cns           ;Constants
st      = DukiNuki.cns           ;States
stcommon = common1.cns      ;Common states (from data/ or motif)
sprite  = DukiNuki.sff           ;Sprite
anim    = DukiNuki.air           ;Animation
sound   = DukiNuki.snd           ;Sound

; Maps character selection buttons to palette numbers.
[Palette Keymap]
a = 1 ;Press button X to select palette 1, etc.
b = 2
c = 3
x = 4
y = 5
z = 6
;a2 = 7 ;Hold Start and press button X for palette 7, etc.
;b2 = 8
;c2 = 9
;x2 = 10
;y2 = 11
;z2 = 12

; Arcade mode
[Arcade]
intro.storyboard = intro.def
ending.storyboard = ending.def
