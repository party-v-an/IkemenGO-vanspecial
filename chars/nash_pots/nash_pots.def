;==========<PALETTE MODE SELECTION>==========
[Statedef 5900]
type = S
anim = 9999

[State 5900, varreset]
type = varrangeset
trigger1 = !roundsexisted
value = 0

[State 5900, varreset]
type = varrangeset
trigger1 = !roundsexisted
fvalue = 0

[State 5900, Palette]
type = remappal
trigger1 = 1
source = 1, 1
dest = 1, palno

[State 5900, Mode Selection]
type = mapset
map = "shadow"
trigger1 = 1
value = ifelse(palno >= 7, 1, 0)

[State 5900, Change Name]
type = modifyplayer
trigger1 = !time
trigger1 = !roundsexisted
trigger1 = !map(shadow)
displayname = "Nash"
lifebarname = "Nash"

[State 5900, Change Name]
type = modifyplayer
trigger1 = !time
trigger1 = !roundsexisted
trigger1 = map(shadow)
displayname = "Shadow"
lifebarname = "Shadow"

