; Definition file for Spin To
; Contains all the filenames needed for the character

; Player information
[Info]
name = "Spin To Win"        ;Name of character so people can make weird anti-codes agaisnt you.
displayname = "Spin To"     ;Name of character to display
versiondate = 10,18,2015    ;Version date of character (MM-DD-YYYY or X.XX or 20XX) Spin To's production began on 07,30,2015
mugenversion = 1.0          ;Version of M.U.G.E.N character works on (X.XX)
author = "Brergrsart"       ;Character author name
pal.defaults = 1,2,3,4      ;Default palettes in order of preference (up to 4)
                            ;Numbering starts from 1
localcoord = 320,240        ;Local coordinate space width and height

; Files for the player
[Files]
cmd     = spinto.cmd           ;Command set
cns     = spinto.cns           ;Constants
st      = spinto.cns           ;States
stcommon = common1.cns         ;Common states (from data/ or motif)
sprite  = spinto.sff           ;Sprite
anim    = spinto.air           ;Animation
sound   = spinto.snd           ;Sound

; Maps character selection buttons to palette numbers.
[Palette Keymap]
a = 1
b = 2
c = 3
x = 4
y = 5
z = 6
a2 = 7 ;Hold Start and press button X for palette 7, etc.
b2 = 8
c2 = 9
x2 = 10
y2 = 11
z2 = 12