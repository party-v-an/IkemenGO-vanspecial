;==========<PALETTE MODE SELECTION>==========
[Statedef 5900]
type = S
anim = 9999

[State 5900, varreset]
type = varrangeset
trigger1 = !roundsexisted
value = 0

[State 5900, varreset]
type = varrangeset
trigger1 = !roundsexisted
fvalue = 0

[State 5900, Palette]
type = remappal
trigger1 = 1
source = 1, 1
dest = 1, palno

[State 5900, Mode Selection]
type = varset
trigger1 = 1
var(1) = ifelse(palno = 12, 3, ifelse(palno >= 7, 2, 1))

[State 5900, Change Name]
type = modifyplayer
trigger1 = !time
trigger1 = var(1) = 1
displayname = "Ryu"
lifebarname = "Ryu"

[State 5900, Change Name]
type = modifyplayer
trigger1 = !time
trigger1 = var(1) = 2
displayname = "Evil Ryu"
lifebarname = "Evil Ryu"

[State 5900, Change Name]
type = modifyplayer
trigger1 = !time
trigger1 = var(1) = 3
displayname = "Master Ryu"
lifebarname = "Master Ryu"

[State 5900, Change Small Portrait]
type = remapsprite
trigger1 = !time
trigger1 = var(1) = 2 || var(1) = 3
source = 9000, 0
dest = 9000, ifelse(var(1) = 3, 11, 10)

